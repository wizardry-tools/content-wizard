{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "newLine": "lf",
    "baseUrl": "./src",
    "paths": {
      "@/types": ["./types"],
      "@/providers": ["./providers"],
      "@/utility": ["./utility"],
      "@/icons": ["./icons"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"]
    },
    "types": [
      "react",
      "react-dom",
      "react-swipeable-views",
      "jest/globals",
      "jest",
      "codemirror",
      "eslint__js",
      "markdown-it",
      "react-swipeable-views-core",
      "react-test-renderer",
      "set-value",
      "sinon",
      "warning"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/public",
    "**/target",
    "**/node",
    "**/.*/"
  ]
}