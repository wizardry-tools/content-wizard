{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "plugins": [
      {
        "name": "react"
      }
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/public",
    "**/.*/"
  ],
  "include": [
    "react-app-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
