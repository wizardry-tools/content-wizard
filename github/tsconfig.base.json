{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "newLine": "lf",
    "baseUrl": "./src",
    "paths": {
      "@/types": ["./types"],
      "@/components": ["./components"],
      "@/content": ["./content"],
      "@/hooks": ["./hooks"],
      "@/icons": ["./icons"],
      "@/images": ["./images"],
      "@/providers": ["./providers"],
      "@/routes": ["./routes"],
      "@/utils": ["./utils"]
    },
    "types": [
      "react",
      "react-dom",
      "eslint__js",
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/public",
    "**/.*/"
  ]
}